@{
    int _status = @ViewBag.Status;

}

@if (_status < 0)
{

    <div class="alert alert-danger alert-dismissible fade in" role="alert" id="modal_alert_criarpasta">
        <button type="button" class="close btn_modal" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        @Html.Raw(@ViewBag.Message)
        <input type="hidden" name="hidstatus" id="hidstatus" value="@ViewBag.Status" />
    </div>
}
else if (_status > 0)
{
    <div class="alert alert-warning alert-dismissible fade in" role="alert" id="modal_alert_criarpasta">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        @Html.Raw(@ViewBag.Message)
        <input type="hidden" name="hidstatus" id="hidstatus" value="@ViewBag.Status" />
    </div>
}
else
{
    <div class="alert alert-success alert-dismissible fade in" role="alert" id="modal_alert_criarpasta">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        @Html.Raw(@ViewBag.Message)
        <input type="hidden" name="hidstatus" id="hidstatus" value="@ViewBag.Status" />
        <input type="hidden" name="hidcaminho" id="hidcaminho" value="@ViewBag.Caminho" />
    </div>
}

