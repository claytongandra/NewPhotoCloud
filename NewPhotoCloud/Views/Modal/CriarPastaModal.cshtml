@model NewPhotoCloud.Models.CriarPasta

@using (Html.BeginForm("CriarPasta", "GerenciarPasta", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "form_criarpasta" }))
{ @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NomePasta, new { @class = "col-md-3 control-label" })

        <div class="col-md-9">
            @Html.TextBoxFor(m => m.NomePasta, new { @id = "NomePasta", @class = "form-control", @placeholder = "Nome da pasta", @maxlength = "50" })
            <input type="hidden" name="hidCaminhoComp" id="hidCaminhoComp" value="@Model.CaminhoPasta" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" class="btn btn-default btn-photocloud btn-block" value="Criar pasta" />
        </div>
    </div>

}

