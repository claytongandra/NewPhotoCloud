@model NewPhotoCloud.Models.RenomearArquivo

@using (Html.BeginForm("RenomearArquivo", "GerenciarArquivo", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "form_renomeararquivo" }))
{ @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NomeArquivo, new { @class = "col-md-4 control-label" })

        <div class="col-md-7">
            <div class="input-group">
                @Html.TextBoxFor(m => m.NomeArquivo, new { @id = "NomeArquivo", @class = "form-control", @placeholder = "Novo nome do arquivo", @maxlength = "50", @aria_describedby = "label_extencao" })
                <span class="input-group-addon" id="label_extencao">@Model.ExtencaoArquivo</span>
            </div>
            <input type="hidden" name="hidCaminhoComp" id="hidCaminhoComp" value="@Model.CaminhoArquivo" style="width:350px;" />
            <input type="hidden" name="hidArquivoOriginal" id="hidArquivoOriginal" value="@Model.NomeArquivo" style="width:350px;" />
            <input type="hidden" name="hidArquivoExtencao" id="hidArquivoExtencao" value="@Model.ExtencaoArquivo" style="width:350px;" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            <input type="submit" class="btn btn-default btn-photocloud btn-block" value="Renomear arquivo" />
        </div>
    </div>

}